<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="27dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemDataTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="data time"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/itemDataTimeTV"
                android:layout_below="@+id/itemDataTimeTV"
                android:layout_marginStart="16dp"
                android:text="temp"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/itemDataTimeTV"
                app:layout_constraintTop_toTopOf="@+id/itemDataTimeTV" />

            <ImageView
                android:id="@+id/itemIconImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/itemTempTV"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toEndOf="@+id/itemTempTV"
                app:layout_constraintTop_toTopOf="@+id/itemTempTV"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/itemDescTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/itemIconImgView"
                android:layout_below="@+id/itemIconImgView"
                android:layout_marginStart="8dp"
                android:text="desc"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/itemIconImgView"
                app:layout_constraintTop_toTopOf="@+id/itemIconImgView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>